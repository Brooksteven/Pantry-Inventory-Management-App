<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Pantry Items</title>
  <link rel="stylesheet" href="/styles/styles.css">
</head>
<body>
  <h1>Pantry Items</h1>
  <a href="/users">View Users</a> |
  <a href="/items/new">Add New Item</a> |
  <a href="/recipes">Find Recipes with Pantry Items</a>
  
  <ul>
    <% items.forEach(item => { %>
      <li>
        <%= item.name %> - <%= item.category %> - <%= item.quantity %> 
        <a href="/items/edit/<%= item.id %>">Edit</a> 
        <form action="/items/<%= item.id %>?_method=DELETE" method="POST" style="display:inline;">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }) %>
  </ul>
</body>
</html>
